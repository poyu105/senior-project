@using System.Security.Claims
@{
    var errMsg = TempData["errMsg"] != null ? Uri.EscapeDataString(TempData["errMsg"].ToString()) : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - senior_project_web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/senior_project_web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-3 py-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">senior_project_web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 gap-4">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-secondary btn-light btn-outline-dark fs-3 custom-hover" asp-area="" asp-controller="Home" asp-action="Index">菜單</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-secondary btn-light btn-outline-dark fs-3 custom-hover" asp-area="" asp-controller="Admin" asp-action="Index">管理員系統</a>
                        </li>
                        @{
                            if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-secondary btn-light btn-outline-dark fs-3 custom-hover" asp-area="" asp-controller="Admin" asp-action="Inventory">庫存管理</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-secondary btn-light btn-outline-dark fs-3 custom-hover" asp-area="" asp-controller="Admin" asp-action="Prediction">銷售預測</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="d-flex justify-content-between align-items-baseline border-bottom mb-3 pb-2">
                <h1 class="m-0">@ViewData["Title"]</h1>
                @{
                    if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div>
                            <span>Hello, @User.FindFirst(ClaimTypes.Name)?.Value</span>
                            <button>
                                <a asp-controller="Auth" asp-action="Logout">登出系統</a>
                            </button>
                        </div>
                    }
                }
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - senior_project_web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
        var errMsg = '@errMsg';
        if (errMsg) {
            alert(decodeURIComponent(errMsg));
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
